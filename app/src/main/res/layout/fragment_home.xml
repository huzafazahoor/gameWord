<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ui.home.HomeFragment">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:fitsSystemWindows="true"
        app:elevation="0dp">
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:elevation="100dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|snap"
            android:fitsSystemWindows="true"
            android:background="@color/purple_6">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_marginTop="@dimen/_25sdp"
                    app:layout_collapseMode="parallax"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:src="@drawable/knifehiticon"
                    android:id="@+id/iv_profile"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"/>
                <com.google.android.material.textview.MaterialTextView
                    app:layout_collapseMode="parallax"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_below="@id/iv_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/pink_3"
                    android:id="@+id/mtv_name"
                    style="@style/TextAppearanceHeadline3"
                    android:text="Nameera"/>
                    <LinearLayout
                        android:layout_centerHorizontal="true"
                        android:padding="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_below="@id/mtv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="?attr/actionBarSize"
                        android:fitsSystemWindows="true">
                        <androidx.cardview.widget.CardView

                            app:cardElevation="@dimen/_5sdp"
                            app:cardBackgroundColor="@color/pink_3"
                            app:cardCornerRadius="@dimen/_100sdp"
                            android:layout_width="@dimen/_45sdp"
                            android:layout_height="@dimen/_45sdp">
                            <TextView
                                android:padding="10dp"
                                android:textColor="@color/purple_6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="02:10"
                                android:textStyle="bold"
                                android:fontFamily="@font/poppins_semi_bold"
                                android:textSize="@dimen/_11ssp"
                                android:layout_gravity="center"/>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_marginStart="@dimen/_25sdp"
                            app:cardElevation="@dimen/_5sdp"
                            app:cardBackgroundColor="@color/pink_3"
                            app:cardCornerRadius="@dimen/_100sdp"
                            android:layout_width="@dimen/_45sdp"
                            android:layout_height="@dimen/_45sdp">
                            <TextView
                                android:padding="10dp"
                                android:textColor="@color/purple_6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="02:10"
                                android:textStyle="bold"
                                android:fontFamily="@font/poppins_semi_bold"
                                android:textSize="@dimen/_11ssp"
                                android:layout_gravity="center"/>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_marginStart="@dimen/_25sdp"
                            app:cardElevation="@dimen/_5sdp"
                            app:cardBackgroundColor="@color/pink_3"
                            app:cardCornerRadius="@dimen/_100sdp"
                            android:layout_width="@dimen/_45sdp"
                            android:layout_height="@dimen/_45sdp">
                            <TextView
                                android:padding="10dp"
                                android:textColor="@color/purple_6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="02:10"
                                android:textStyle="bold"
                                android:fontFamily="@font/poppins_semi_bold"
                                android:textSize="@dimen/_11ssp"
                                android:layout_gravity="center"/>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
            </RelativeLayout>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       android:fitsSystemWindows="true"
        android:background="@color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp">
            <TextView
                android:id="@+id/tv_title_featured_tournaments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextAppearanceHeadline5"
                android:textStyle="bold"
                android:textColor="@color/purple_6"
                android:text="Featured Tournaments"/>
            <androidx.viewpager.widget.ViewPager
                android:id="@+id/vp_slider_featured_tournaments"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_below="@id/tv_title_featured_tournaments"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_175sdp"/>
            <TextView
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_below="@id/vp_slider_featured_tournaments"
                android:id="@+id/tv_featured_games"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextAppearanceHeadline5"
                android:textStyle="bold"
                android:textColor="@color/purple_6"
                android:text="Featured Games"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_featured_games"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_below="@id/tv_featured_games"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="20"
                tools:listitem="@layout/list_item_slider_tournament"/>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_6"
    tools:context=".activities.ui.home.HomeFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        app:elevation="0dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="100dp"
            android:background="@color/purple_6"
            android:fitsSystemWindows="true"
            app:layout_scrollFlags="scroll|snap">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_profile"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:src="@drawable/knifehiticon"
                    app:layout_collapseMode="parallax" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/mtv_name"
                    style="@style/TextAppearanceHeadline3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_profile"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="center"
                    android:text="Nameera"
                    android:textColor="@color/pink_3"
                    app:layout_collapseMode="parallax" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/mtv_name"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginBottom="?attr/actionBarSize"
                    android:fitsSystemWindows="true"
                    android:padding="@dimen/_10sdp">

                    <androidx.cardview.widget.CardView

                        android:layout_width="@dimen/_45sdp"
                        android:layout_height="@dimen/_45sdp"
                        app:cardBackgroundColor="@color/pink_3"
                        app:cardCornerRadius="@dimen/_100sdp"
                        app:cardElevation="@dimen/_5sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/poppins_semi_bold"
                            android:padding="10dp"
                            android:text="02:10"
                            android:textColor="@color/purple_6"
                            android:textSize="@dimen/_11ssp"
                            android:textStyle="bold" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_45sdp"
                        android:layout_height="@dimen/_45sdp"
                        android:layout_marginStart="@dimen/_25sdp"
                        app:cardBackgroundColor="@color/pink_3"
                        app:cardCornerRadius="@dimen/_100sdp"
                        app:cardElevation="@dimen/_5sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/poppins_semi_bold"
                            android:padding="10dp"
                            android:text="02:10"
                            android:textColor="@color/purple_6"
                            android:textSize="@dimen/_11ssp"
                            android:textStyle="bold" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_45sdp"
                        android:layout_height="@dimen/_45sdp"
                        android:layout_marginStart="@dimen/_25sdp"
                        app:cardBackgroundColor="@color/pink_3"
                        app:cardCornerRadius="@dimen/_100sdp"
                        app:cardElevation="@dimen/_5sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/poppins_semi_bold"
                            android:padding="10dp"
                            android:text="02:10"
                            android:textColor="@color/purple_6"
                            android:textSize="@dimen/_11ssp"
                            android:textStyle="bold" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </RelativeLayout>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">
           <View
               android:layout_gravity="top"
               app:layout_anchor="@id/rl"
               android:layout_width="match_parent"
               android:layout_height="@dimen/_16sdp"
               android:background="@drawable/shadow_gradient"/>
           <RelativeLayout
               android:id="@+id/rl"
               android:background="@color/white"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:padding="@dimen/_8sdp">

               <TextView
                   android:layout_marginTop="@dimen/_8sdp"
                   android:id="@+id/tv_title_featured_tournaments"
                   style="@style/TextAppearanceHeadline5"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Featured Tournaments"
                   android:textColor="@color/purple_6"
                   android:textStyle="bold" />

               <androidx.viewpager2.widget.ViewPager2
                   android:id="@+id/vp_slider_featured_tournaments"
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/_175sdp"
                   android:layout_below="@id/tv_title_featured_tournaments"
                   android:overScrollMode="always" />

               <TextView
                   android:id="@+id/tv_featured_games"
                   style="@style/TextAppearanceHeadline5"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_below="@id/vp_slider_featured_tournaments"
                   android:layout_marginTop="@dimen/_10sdp"
                   android:text="Featured Games"
                   android:textColor="@color/purple_6"
                   android:textStyle="bold" />

               <androidx.recyclerview.widget.RecyclerView
                   android:id="@+id/rv_featured_games"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_below="@id/tv_featured_games"
                   android:layout_marginTop="@dimen/_10sdp"
                   android:nestedScrollingEnabled="false"
                   app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                   app:spanCount="2"
                   tools:itemCount="20"
                   tools:listitem="@layout/list_item_featured_game" />
               <com.google.android.material.textview.MaterialTextView
                   android:id="@+id/mtv_view_all"
                   android:layout_marginTop="@dimen/_12sdp"
                   android:layout_marginBottom="@dimen/_7sdp"
                   android:layout_centerHorizontal="true"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   style="@style/TextAppearanceSubtitle2"
                   android:text="View All"
                   android:layout_below="@id/rv_featured_games"
                   app:drawableEndCompat="@drawable/ic_arrow_right" />
           </RelativeLayout>
       </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
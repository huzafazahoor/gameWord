<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_2"
    tools:context=".activities.ui.home.HomeFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        app:elevation="0dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="100dp"
            android:background="@color/purple_7"
            android:fitsSystemWindows="true"
            app:layout_scrollFlags="scroll|snap">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:fitsSystemWindows="true"
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    app:contentInsetStart="0dp"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@android:color/transparent">
                    <ImageView
                        android:clickable="true"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:id="@+id/iv_notifications"
                        android:padding="@dimen/_10sdp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_notifications" />

                    <ImageView
                        android:scaleType="fitCenter"
                        android:clickable="true"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:id="@+id/iv_sliding_root_nav"
                        android:padding="@dimen/_10sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_menu" />
                </RelativeLayout>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_below="@id/toolbar"
                    android:id="@+id/iv_profile"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:src="@drawable/knifehiticon"
                    app:layout_collapseMode="parallax" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/mtv_name"
                    style="@style/TextAppearanceHeadline3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_profile"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="center"
                    android:text="Nameera Nameera"
                    android:textColor="@color/pink_1"
                    app:layout_collapseMode="parallax"
                    android:layout_marginHorizontal="@dimen/_20sdp"/>
                <LinearLayout
                    android:padding="@dimen/_10sdp"
                    android:layout_below="@id/mtv_name"
                    android:id="@+id/ll_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textview.MaterialTextView
                        android:paddingVertical="@dimen/_8sdp"
                        android:paddingHorizontal="@dimen/_16sdp"
                        android:id="@+id/tv_points1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_16sdp"
                        style="@style/TextAppearanceSubtitle2"
                        android:background="@drawable/bg_gradient_btn"
                        android:text="100 score"
                        android:includeFontPadding="false"
                        android:gravity="center"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:paddingVertical="@dimen/_8sdp"
                        android:paddingHorizontal="@dimen/_16sdp"
                        android:id="@+id/tv_points2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_16sdp"
                        style="@style/TextAppearanceSubtitle2"
                        android:background="@drawable/bg_gradient_btn"
                        android:text="$100.00"
                        android:includeFontPadding="false"
                        android:gravity="center"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:paddingVertical="@dimen/_8sdp"
                        android:paddingHorizontal="@dimen/_16sdp"
                        android:id="@+id/tv_points3"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_16sdp"
                        style="@style/TextAppearanceSubtitle2"
                        android:background="@drawable/bg_gradient_btn"
                        android:text="250 min."
                        android:includeFontPadding="false"
                        android:gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll_2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:fitsSystemWindows="true"
                    android:padding="@dimen/_10sdp">

                    <androidx.cardview.widget.CardView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/purple_6"
                        app:cardCornerRadius="@dimen/_14sdp">
                        <LinearLayout
                            android:paddingHorizontal="@dimen/_16sdp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingVertical="@dimen/_14sdp">
                            <de.hdodenhof.circleimageview.CircleImageView
                                app:civ_border_width="@dimen/_2sdp"
                                android:layout_width="@dimen/_60sdp"
                                android:layout_height="@dimen/_60sdp"
                                app:civ_border_color="@color/purple_2"
                                android:src="@drawable/knifehiticon"/>
                            <TextView
                                android:textColor="@color/white"
                                android:gravity="center"
                                android:textSize="@dimen/_16ssp"
                                android:layout_marginTop="@dimen/_6sdp"
                                style="@style/TextAppearanceHeadline5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:padding="10dp"
                                android:text="02:10"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_marginHorizontal="@dimen/_8sdp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/purple_6"
                        app:cardCornerRadius="@dimen/_14sdp">
                        <LinearLayout
                            android:paddingHorizontal="@dimen/_14sdp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingVertical="@dimen/_14sdp">
                            <de.hdodenhof.circleimageview.CircleImageView
                                app:civ_border_width="@dimen/_2sdp"
                                android:layout_width="@dimen/_60sdp"
                                android:layout_height="@dimen/_60sdp"
                                app:civ_border_color="@color/purple_2"
                                android:src="@drawable/knifehiticon"/>
                            <TextView
                                android:textColor="@color/white"
                                android:gravity="center"
                                android:textSize="@dimen/_16ssp"
                                android:layout_marginTop="@dimen/_6sdp"
                                style="@style/TextAppearanceHeadline5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:padding="10dp"
                                android:text="02:10"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/purple_6"
                        app:cardCornerRadius="@dimen/_14sdp">
                        <LinearLayout
                            android:paddingHorizontal="@dimen/_16sdp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingVertical="@dimen/_14sdp">
                            <de.hdodenhof.circleimageview.CircleImageView
                                app:civ_border_width="@dimen/_2sdp"
                                android:layout_width="@dimen/_60sdp"
                                android:layout_height="@dimen/_60sdp"
                                app:civ_border_color="@color/purple_2"
                                android:src="@drawable/knifehiticon"/>
                            <TextView
                                android:textColor="@color/white"
                                android:gravity="center"
                                android:textSize="@dimen/_16ssp"
                                android:layout_marginTop="@dimen/_6sdp"
                                style="@style/TextAppearanceHeadline5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:padding="10dp"
                                android:text="02:10"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </RelativeLayout>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:background="@drawable/bg_drawable_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--            <View-->
            <!--                android:layout_gravity="top"-->
            <!--                app:layout_anchor="@id/rl"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="@dimen/_16sdp"-->
            <!--                android:background="@drawable/shadow_gradient"/>-->
            <RelativeLayout

                android:id="@+id/rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp">

                <TextView
                    android:layout_marginTop="@dimen/_8sdp"
                    android:id="@+id/tv_title_featured_tournaments"
                    style="@style/TextAppearanceHeadline5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Featured Tournaments"
                    android:textColor="@color/pink_1"
                    android:textStyle="bold" />

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/vp_slider_featured_tournaments"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_190sdp"
                    android:layout_below="@id/tv_title_featured_tournaments"
                    android:overScrollMode="always" />

                <TextView
                    android:id="@+id/tv_featured_games"
                    style="@style/TextAppearanceHeadline5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/vp_slider_featured_tournaments"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="Featured Games"
                    android:textColor="@color/pink_1"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_featured_games"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_featured_games"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:nestedScrollingEnabled="false"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:itemCount="10"
                    tools:listitem="@layout/list_item_featured_game" />
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/mtv_view_all"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginBottom="@dimen/_7sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearanceSubtitle2"
                    android:text="View All"
                    android:textColor="@color/pink_1"
                    android:layout_below="@id/rv_featured_games"
                    app:drawableEndCompat="@drawable/ic_arrow_right" />
            </RelativeLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
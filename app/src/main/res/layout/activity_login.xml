<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.ActivityLogin"
    android:background="@drawable/bg_drawable_layout">
    <FrameLayout
        android:id="@+id/bg_design"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-90dp"
            android:background="@drawable/ic_background">
        </LinearLayout>
    </FrameLayout>
    <ScrollView
        android:layout_below="@id/bg_design"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_15sdp">
            <com.google.android.material.textview.MaterialTextView
                android:layout_alignParentTop="true"
                android:id="@+id/tv_welcome_back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_30sdp"
                style="@style/TextAppearanceHeadline1"
                android:text="Welcome Back"/>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_below="@id/tv_welcome_back"
                android:id="@+id/til_email"
                style="@style/TextInputLayoutDesign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tie_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextInputEditTextTheme"
                    android:inputType="text|textEmailAddress"
                    android:hint="Email"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_password"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_below="@id/til_email"
                style="@style/TextInputLayoutDesign"
                android:layout_width="match_parent"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/pink_3"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tie_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextInputEditTextTheme"
                    android:inputType="textPassword"
                    android:hint="Password"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textview.MaterialTextView
                android:layout_below="@id/til_password"
                android:id="@+id/tv_forget_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginBottom="@dimen/_28sdp"
                style="@style/TextAppearanceSubtitle2"
                android:text="Forget Password?"
                android:gravity="end"/>
            <com.google.android.material.textview.MaterialTextView
                android:layout_below="@id/tv_forget_password"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/MaterialTextViewTheme"
                android:id="@+id/tv_login"
                android:background="@drawable/bg_gradient_btn"
                android:text="Login"/>
            <com.google.android.material.textview.MaterialTextView
                android:layout_below="@id/tv_login"
                android:id="@+id/tv_new_member"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"
                style="@style/TextAppearanceSubtitle2"
                android:text="@string/new_member"
                android:gravity="center"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>

<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GameWord" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_3</item>
        <item name="colorPrimaryVariant">@color/purple_3</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pink</item>
        <item name="colorSecondaryVariant">@color/pink</item>
        <item name="colorOnSecondary">@color/pink</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/background</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="TextInputLayoutDesign" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/bg_widgets</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_8sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_8sdp</item>
        <item name="boxCornerRadiusTopStart">@dimen/_8sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_8sdp</item>
        <item name="hintEnabled">false</item>
    </style>
    <style name="TextInputEditTextTheme">
        <item name="android:padding">@dimen/_14sdp</item>
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:textColorHint">@color/text_color_hint</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/pink_3</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextAppearanceHeadline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:fontFamily">@font/poppins_black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_35ssp</item>
        <item name="android:textColor">@color/pink_3</item>
    </style>
    <style name="TextAppearanceHeadline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_28ssp</item>
        <item name="android:textColor">@color/pink_3</item>
    </style>
    <style name="TextAppearanceHeadline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_24ssp</item>
        <item name="android:textColor">@color/pink_3</item>
    </style>
    <style name="TextAppearanceHeadline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_22ssp</item>
        <item name="android:textColor">@color/pink_3</item>
    </style>
    <style name="TextAppearanceHeadline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/_20ssp</item>
        <item name="android:textColor">@color/pink_3</item>
    </style>
    <style name="TextAppearanceHeadline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/_17ssp</item>
        <item name="android:textColor">@color/pink_3</item>
    </style>
    <style name="TextAppearanceBody1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textColor">@color/pink_3</item>
    </style>
    <style name="TextAppearanceBody2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:textColor">@color/pink_3</item>
    </style>
    <style name="TextAppearanceSubtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:fontFamily">@font/poppins_thin</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textColor">@color/pink_3</item>
    </style>
    <style name="TextAppearanceSubtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:textColor">@color/pink_3</item>
    </style>
    <style name="MaterialTextViewTheme" parent="Widget.MaterialComponents.TextView">
        <item name="android:padding">@dimen/_12sdp</item>
        <item name="cornerRadius">@dimen/_8sdp</item>
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>